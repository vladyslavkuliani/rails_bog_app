<!DOCTYPE html>
<html>
  <head>
    <title>BogApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="row">
      <div class="nav">
        <div class="option" id="home">
          <strong><span>Home</span></strong>
        </div>
        <div class="option" id="new">
          <strong><span>Create new</span></strong>
        </div>
      </div>
    </header>
    <div class="container">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
